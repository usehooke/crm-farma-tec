rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Garante que o utilizador só consiga ler e escrever na sua própria subcoleção de médicos
    match /usuarios/{userId}/medicos/{medicoId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regra adicional para permitir gerir o metadata/lastSync do próprio perfil
    match /usuarios/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
